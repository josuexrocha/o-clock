<!DOCTYPE html>
<html lang="fr">

<%- include('partials/head') %>


    <body>
        <div class="pure-g">
            <%- include('partials/header') %>

                <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
                    <div class="pure-g">
                        <article class="post pure-u-1">
                            <header>
                                <h1>
                                    <%= article.title %>
                                </h1>
                                <div class="post-meta">
                                    Par <a href="#">
                                        <%= article.author %>
                                    </a>
                                    dans la catégorie <a href="/categorie/<%= encodeURIComponent(article.category) %>">
                                        <%= article.category %>
                                    </a>
                                </div>

                            </header>
                            <figure class="post-picture">
                                <img class="pure-img" src="/images/<%= article.img %>" alt="<%= article.img_alt %>">
                                <figcaption class="post-picture-caption">
                                    <%= article.sub_title %>
                                </figcaption>
                            </figure>
                            <div class="post-content">
                                <p>
                                    <%= article.text %>
                                </p>
                            </div>
                            <a class="pure-button" href="index.html">Retour à l'accueil</a>
                        </article>
                    </div>
                </main>
        </div>
    </body>

    <%- include('partials/footer') %>

</html>