<!DOCTYPE html>
<html lang="fr">
<%- include('partials/head') %>

    <body>
        <div class="pure-g">
            <%- include('partials/header') %>
                <main class="content pure-u-1 pure-u-md-3-4 pure-u-xl-5-6">
                    <h1 class="content-title">Articles dans la catégorie "<%= category %>"</h1>
                    <% if (articles.length> 0) { %>
                        <div class="pure-g">
                            <% articles.forEach(article=> { %>
                                <article class="card pure-u-1 pure-u-lg-1-2 pure-u-xl-1-3">
                                    <header>
                                        <img class="card-img pure-img" src="/images/<%= article.img %>"
                                            alt="<%= article.img_alt %>">
                                        <h2>
                                            <%= article.title %>
                                        </h2>
                                        <div class="card-meta">
                                            Par <a href="#">
                                                <%= article.author %>
                                            </a>
                                            dans la catégorie <a
                                                href="/categorie/<%= encodeURIComponent(article.category) %>">
                                                <%= article.category %>
                                            </a>
                                        </div>
                                    </header>
                                    <p>
                                        <% const words=article.text.split(' ').slice(0, 30).join(' '); %>
                <%= words %>...
              </p>
              <a class="card-action pure-button" href="/article/<%= article.id %>">Lire l' article</a>
                                </article>
                                <% }); %>
                        </div>
                        <% } else { %>
                            <p>Aucun article trouvé dans cette catégorie.</p>
                            <% } %>
                </main>
        </div>
    </body>
    <%- include('partials/footer') %>

</html>