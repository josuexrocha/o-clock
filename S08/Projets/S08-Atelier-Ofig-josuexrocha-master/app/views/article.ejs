<%- include('partials/header') %>

  <div class="container mt-5 pt-5">
    <div class="row">
      <%- include('partials/leftMenu') %>

        <div class="col-lg-9">
          <div class="row">
            <div class="col-md-6">
              <img src="/images/<%= figurine.name %>.png" alt="<%= figurine.name %>" class="img-fluid">
            </div>
            <div class="col-md-6">
              <h2>
                <%= figurine.name %>
              </h2>
              <h4 class="text-muted">$<%= figurine.price.toFixed(2) %>
              </h4>
              <p>
                <%= figurine.description %>
              </p>
              <p>Taille : <%= figurine.size %> cm</p>
              <a href="/bookmarks/add/<%= figurine.id %>" class="btn btn-success">Ajouter aux favoris</a>
            </div>
          </div>

          <!-- Section des avis -->
          <h3 class="mt-5">Avis</h3>
          <% if (reviews && reviews.length> 0) { %>
            <% reviews.forEach(review=> { %>
              <div class="mb-4">
                <h5>
                  <%= review.title %> - <small class="text-muted">
                      <%= review.note %>/5
                    </small>
                </h5>
                <p>
                  <%= review.message %>
                </p>
                <p class="text-muted">- <%= review.author %>
                </p>
                <hr>
              </div>
              <% }) %>
                <% } else { %>
                  <p>Aucun avis pour cette figurine.</p>
                  <% } %>
        </div>
    </div>
  </div>

  <%- include('partials/footer') %>