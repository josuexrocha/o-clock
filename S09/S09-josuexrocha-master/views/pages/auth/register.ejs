<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../../partials/head') %>
    <title>O'Coffee - Inscription</title>
</head>
<body>
    <%- include('../../partials/header') %>
    <main>
        <section id="register" class="register-container">
            <h1 class="page-title">Inscription</h1>
            <% if (locals.validationErrors && validationErrors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% validationErrors.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <form action="/auth/register" method="POST" class="register-form">
                <div class="form-group">
                    <label for="firstName">Prénom</label>
                    <input type="text" id="firstName" name="firstName" required value="<%= locals.oldInput ? oldInput.firstName : '' %>">
                </div>
                <div class="form-group">
                    <label for="lastName">Nom</label>
                    <input type="text" id="lastName" name="lastName" required value="<%= locals.oldInput ? oldInput.lastName : '' %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required value="<%= locals.oldInput ? oldInput.email : '' %>">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit" class="btn">S'inscrire</button>
            </form>
            <div class="register-links">
                <p>Déjà un compte ? <a href="/auth/login">Se connecter</a></p>
            </div>
        </section>
    </main>
    <%- include('../../partials/footer') %>
</body>
</html>