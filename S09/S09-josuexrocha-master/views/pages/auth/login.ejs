<!-- views/pages/auth/login.ejs -->
<!DOCTYPE html>
<html lang="fr">
<head>
    <%- include('../../partials/head') %>
    <title>O'Coffee - Connexion</title>
</head>
<body>
    <%- include('../../partials/header') %>
    <main>
        <section id="login" class="login-container">
            <h1 class="page-title">Connexion</h1>
            <% if (locals.successMessage) { %>
                <div class="alert alert-success">
                    <%= successMessage %>
                </div>
            <% } %>
            <% if (locals.loginError) { %>
                <div class="alert alert-danger">
                    <%= loginError %>
                </div>
            <% } %>
            <% if (locals.validationErrors && validationErrors.length > 0) { %>
                <div class="alert alert-danger">
                    <ul>
                        <% validationErrors.forEach(error => { %>
                            <li><%= error.msg %></li>
                        <% }) %>
                    </ul>
                </div>
            <% } %>
            <form action="/auth/login" method="POST" class="login-form">
                <div class="form-group">
                    <label for="email">Email :</label>
                    <input type="email" id="email" name="email" required value="<%= locals.oldInput ? oldInput.email : '' %>">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="password" required>
                </div>
                <button type="submit" class="btn">Se connecter</button>
            </form>
            <div class="login-links">
                <p>Pas encore de compte ? <a href="/auth/register">S'inscrire</a></p>
            </div>
        </section>
    </main>
    <%- include('../../partials/footer') %>
</body>
</html>